        <domain includeSubdomains="true">foodsafetymanagement.onrender.com</domain>
    </domain-config>
    <!-- Block all other connections -->
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <certificates src="system"/>
        </trust-anchors>
    </base-config>
</network-security-config> 